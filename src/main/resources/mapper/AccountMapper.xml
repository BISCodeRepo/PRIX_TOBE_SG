<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.prix.homepage.user.mapper.AccountMapper">
 
  <insert id="insertAccount" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO px_account (id, userid, email, password, name, affiliation, level)
      VALUES (#{id}, #{userid}, #{email}, #{password}, #{name}, #{affiliation}, #{level})
  </insert>

  <select id="selectAccount" resultType="com.prix.homepage.user.domain.Account">
    SELECT * FROM px_account WHERE id = #{id}
  </select>

  <delete id="deleteAccount">
    DELETE FROM px_account WHERE id = #{id}
  </delete>

  <select id="isEmailExists">
    SELECT COUNT(*)&gt;0 FROM px_account WHERE email = #{email}
  </select>

  <select id="findByEmail" resultType="com.prix.homepage.user.domain.Account">
    SELECT * FROM px_account WHERE email = #{email}
  </select>


</mapper>